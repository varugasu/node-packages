{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "build.config.ts"]
}
